{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023", "DOM"], // Incluye "DOM" para que React funcione correctamente
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Cambiar a "node" para soporte completo de React y TypeScript
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Necesario para usar JSX en React con TypeScript
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"], // Incluye todos los archivos fuente de tu proyecto
  "exclude": ["node_modules", "dist"] // Excluye directorios no relevantes
}
